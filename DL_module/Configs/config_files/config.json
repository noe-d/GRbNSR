{
    "name": "Mnist_LeNet",
    "n_gpu": 1,
    "seed":0,

    "arch": {
        "type": "GraphMAEModel",
        "args":{
            "encoder_args":{
                "num_layers":3,
                "input_dimension":10,
                "output_dimension":3,
                "hidden_dimension":3
            }
        }
    },
    "dataset": {
        "type": "GraphMAEDataset",
        "args":{
            "dgl_graphs": ["ceo_club", "bison", "copenhagen/calls"],
            "verbosity":true,
            "MAX_DEGREES": 9
        }
    },
    "data_loader": {
        "batch_size":32
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse",
    "loss_type":{
        "type":"SCELoss",
        "args":{
            "alpha":3
        }
    },
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer_type":{
        "type":"GraphMAETrainer",
        "args":{
        }
    },
    "trainer": {
        "epochs": 3,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min loss",
        "early_stop": 10,

        "tensorboard": false
    }
}
