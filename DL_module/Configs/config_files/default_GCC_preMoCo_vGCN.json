{
    "name": "GCC_default",
    "n_gpu": 1,
    "seed":0,
    "inspect":false,

    "arch": {
        "type": "GCCModel",
        "args":{
            "encoder_name":"gcn",
            "encoder_args":{
                "num_layers":2,
                "input_dimension":256,
                "output_dimension":64,
                "hidden_dimension":128,
                "activation":"relu",
                "dropout":0.0,
                "layernorm":false
            },
            "num_layer_set2set":3,
            "num_step_set2set":6,
            "readout":"avg",
            "norm":true,
            "max_degree":512,
            "degree_embedding_size":128,
            "positional_embedding_size":128,
            "degree_input":true
        }
    },
    "dataset": {
        "type": "GCCDataset",
        "args":{
            "dgl_graphs": "../data/data_gnns/graphs_catalogue.csv",
            "verbosity":true,
            "from_csv":true,
            "rw_hops":256,
            "restart_prob":0.8,
            "positional_embedding_size":128,
            "use_entire_graph":false
        }
    },
    "data_loader": {
        "batch_size":64,
        "collate_fn":"collate_fn_gcc",
        "shuffle":false,
        "num_workers":0
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0015,
            "weight_decay": 1e-5,
            "betas":[0.9, 0.999]
        }
    },
    "loss_type":{
        "type":"NCESoftmaxLoss",
        "args":{}
    },
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer_type":{
        "type":"GCCTrainer",
        "args":{
            "contrast_nce_t":0.07,
            "contrast_nce_k":2000,
            "lr":0.0015,
            "moco":true
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min loss",
        "early_stop": 20,

        "tensorboard": false
    }
}
