{
    "name": "GCC",
    "type": "GCC",
    "n_gpu": 1,

    "arch": {
        "type": "GCCModel",
        "args":{
            "encoder_args":{
                "num_layers":3,
                "input_dimension":3,
                "output_dimension":3,
                "hidden_dimension":3
            }
        }
    },
    "data_loader": {
        "type": "GCCDataset",
        "args":{
            "dgl_graphs": ["ceo_club", "bison", "copenhagen/calls"],
            "verbosity":true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
